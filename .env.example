# AADAP â€” Environment Configuration
# Copy to .env and adjust values for your environment.

# General
AADAP_ENVIRONMENT=development
AADAP_DEBUG=true

# PostgreSQL
AADAP_DATABASE_URL=postgresql+asyncpg://aadap:aadap@localhost:5432/aadap
AADAP_DB_POOL_SIZE=10
AADAP_DB_POOL_OVERFLOW=5
AADAP_DB_ECHO_SQL=false

# Redis
AADAP_REDIS_URL=redis://localhost:6379/0
AADAP_REDIS_DEFAULT_TTL_SECONDS=3600
AADAP_REDIS_MAX_CONNECTIONS=20

# Logging
AADAP_LOG_LEVEL=INFO
AADAP_LOG_FORMAT=json

# Server
AADAP_HOST=0.0.0.0
AADAP_PORT=8000
