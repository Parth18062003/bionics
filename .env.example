# General
AADAP_ENVIRONMENT=development
AADAP_DEBUG=true

# PostgreSQL
AADAP_DATABASE_URL=postgresql+asyncpg://parth:parth1806@localhost:5432/bionic
AADAP_DB_POOL_SIZE=10
AADAP_DB_POOL_OVERFLOW=5
