# AADAP â€” Environment Configuration
# Copy to .env and adjust values for your environment.

# General
AADAP_ENVIRONMENT=development
AADAP_DEBUG=true

# PostgreSQL
AADAP_DATABASE_URL=postgresql+asyncpg://parth:parth1806@localhost:5432/bionic
AADAP_DB_POOL_SIZE=10
AADAP_DB_POOL_OVERFLOW=5
AADAP_DB_ECHO_SQL=false

# In-Memory Store
AADAP_MEMORY_DEFAULT_TTL_SECONDS=3600
# Legacy Redis variables (AADAP_REDIS_...) are deprecated and ignored,
# except for AADAP_REDIS_DEFAULT_TTL_SECONDS which acts as a fallback.

# Logging
AADAP_LOG_LEVEL=INFO
AADAP_LOG_FORMAT=json

# Server
AADAP_HOST=0.0.0.0
AADAP_PORT=8000

# Azure OpenAI (LLM & Embeddings)
# Required for real LLM completions and embeddings
AADAP_AZURE_OPENAI_API_KEY=your-api-key-here
AADAP_AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AADAP_AZURE_OPENAI_API_VERSION=2024-02-01
AADAP_AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AADAP_AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# Databricks
# Required for real Databricks execution
# Authentication uses CLI credentials (databricks auth login)
AADAP_DATABRICKS_HOST=https://your-workspace.cloud.databricks.com

# SQL Execution (SQL Warehouse)
AADAP_DATABRICKS_WAREHOUSE_ID=your-warehouse-id
AADAP_DATABRICKS_CATALOG=main
AADAP_DATABRICKS_SCHEMA=default

# Python Execution (Compute Cluster)
AADAP_DATABRICKS_CLUSTER_ID=your-cluster-id

# Microsoft Fabric
# Required for real Microsoft Fabric execution
AADAP_FABRIC_TENANT_ID=your-tenant-id
AADAP_FABRIC_CLIENT_ID=your-client-id
AADAP_FABRIC_CLIENT_SECRET=your-client-secret
AADAP_FABRIC_WORKSPACE_ID=your-fabric-workspace-id
AADAP_FABRIC_LAKEHOUSE_ID=your-lakehouse-id
